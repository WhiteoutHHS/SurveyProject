@page "/Login"

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-4">Вход</h1>

            <form>
                <div class="mb-3">
                    <label for="email" class="form-label">Почта</label>
                    <input type="email" class="form-control rounded" id="email" placeholder="Email">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Пароль</label>
                    <input type="password" class="form-control rounded" id="password" placeholder="Пароль">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary rounded">
                        Завершить <span class="oi oi-arrow-right" aria-hidden="true"></span>
                    </button>
                </div>
            </form>

            <div class="text-center mt-3">
                У вас ещё нет аккаунта?
                <a href="/Registration" class="btn btn-link rounded">Зарегистрироваться</a>
            </div>
        </div>
    </div>
</div>


<style>
    .form-control.rounded {
        border-radius: 0.5rem; /* Slightly rounded corners */
        background-color: #f0f8ff; /* Light blue background */
    }

    .btn.rounded {
        border-radius: 0.5rem; /* Slightly rounded button corners */
    }

    .btn-link {
        padding: 0; /* Remove default padding from link buttons */
    }

    .oi-arrow-right {
        font-size: 0.8em; /* Adjust arrow size */
    }

    .container {
        margin-top: 50px; /* Add margin to the top */
    }

</style>

