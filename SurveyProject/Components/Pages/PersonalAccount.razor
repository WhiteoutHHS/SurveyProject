@page "/PersonalAccount"

@rendermode InteractiveServer
<html>
    <head>
        <PageTitle>Ваш аккаунт</PageTitle>
        <style>
           .roundedStyle {
               border-width: 3px;
               border-color: #305BAB;
               width: 370px;
               height: 70px;
               border-radius: 10px;
               background: #C6DCFF;
               text-align: center;
               font-size: 40px;
           }
           body {
               margin-left: 0px;
               padding: 0px;
           }
        </style>
    </head>
    <body>
        <div style="display:flex;">
            <img style="width: 370px; height: 80px; margin-left: 50px; margin-top: 5px;" src="/images/OprosaitLogo.png">
            <button style="margin-left: 1050px; margin-top: 10px;" id="rectangle" class="roundedStyle">Coздать oпpoc</button>
            <button style="margin-left: 20px; margin-top: 10px;" id="rectangle" class="roundedStyle">Coздать комнату</button>
            <button style="margin-left: 20px; margin-top: 10px;" id="rectangle" class="roundedStyle" onclick="window.location.href='https://localhost:7019/PersonalAccount'">Личный кабинет</button>
        </div>
        <hr style="width: 100%; height: 2px; background: #000000; border: none; margin-left: 0px; margin-top: 5px;"/>
        <div style="display:flex;">
            <div>
                <div class="roundedStyle" id="rectangle" style="margin-left: 125px; margin-top: 50px; width: 300px;">@login</div>
                <div class="roundedStyle" id="rectangle" style="margin-left: 50px; margin-top: 20px; width: 430px;">@gender</div>
                <div class="roundedStyle" id="rectangle" style="margin-left: 50px; margin-top: 20px; width: 430px;">@email</div>
                <div class="roundedStyle" id="rectangle" style="margin-left: 50px; margin-top: 20px; width: 430px;">@birthday</div>
            </div>
            <div>
                <p style="font-size: 40px; margin-left: 420px; margin-top: 30px;">Ваши комнаты:</p>
                <div class="roundedStyle" style="margin-left: 300px; margin-top: 10px; width: 550px; height: 750px; border-radius: 50px; background: #A0C6FF;"></div>
            </div>
            <div>
                <p style="font-size: 40px; margin-left: 50px; margin-top: 30px;">Комнаты, где вы состоите:</p>
                <div class="roundedStyle" style="margin-left: 30px; margin-top: 10px; width: 550px; height: 750px; border-radius: 50px; background: #A0C6FF;"></div>
            </div>
            <div>
                <p style="font-size: 40px; margin-left: 150px; margin-top: 30px;">Ваши опросы:</p>
                <div class="roundedStyle" style="margin-left: 30px; margin-top: 10px; width: 550px; height: 750px; border-radius: 50px; background: #A0C6FF;"></div>
            </div>
        </div>
    </body>
</html>
@code {
    [Parameter]
    public required string login { get; set; }
    [Parameter]
    public required string gender { get; set; }
    [Parameter]
    public required string email { get; set; }
    [Parameter]
    public required string birthday { get; set; }
}
 
